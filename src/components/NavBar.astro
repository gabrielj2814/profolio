---
import type { IEstadoItemsNavBar } from "../interfaces/IEstadoItemsNavBar"

interface Props {
     estadosItemsNavBar:IEstadoItemsNavBar
}

const estadosItemsNavBar:IEstadoItemsNavBar = Astro.props.estadosItemsNavBar

---

<div  class="px-2 ">

    <div class="border-bonito flex row flex-wrap w-full rounded-lg overflow-hidden mb-5" style="border: 1px solid rgb(75 85 99);" >

        <a href="/"
        class:list={[
            "p-2 text-white",
            {
               "bg-gray-600":  estadosItemsNavBar.paginaInicio ,
               "bg-gray-900":  !estadosItemsNavBar.paginaInicio ,
            }
        ]}
        >
            Inicio
        </a>
        <a href="/sobre-mi"
        class:list={[
            "p-2 text-white",
            {
               "bg-gray-600":  estadosItemsNavBar.paginaSobreMi ,
               "bg-gray-900":  !estadosItemsNavBar.paginaSobreMi ,
            }
        ]}
        >
            Sobre Mi
        </a>
        <a href="/skills"
        class:list={[
            "p-2 text-white",
            {
               "bg-gray-600":  estadosItemsNavBar.paginaHabilidades ,
               "bg-gray-900":  !estadosItemsNavBar.paginaHabilidades ,
            }
        ]}
        >
            Habilidades
        </a>
        <a href="/proyectos" 
        class:list={[
            "p-2 text-white",
            {
               "bg-gray-600":  estadosItemsNavBar.paginaProyecto ,
               "bg-gray-900":  !estadosItemsNavBar.paginaProyecto ,
            }
        ]}
        
        >
            Proyectos
        </a>

        
    </div>

</div>

<style>

.border-bonito{
	border: 1px solid #fff;
}

</style>