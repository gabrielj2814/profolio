---
import Layout from "../layouts/Layout.astro"
import NavBar  from "../components/NavBar.astro"
import type { IEstadoItemsNavBar } from "../interfaces/IEstadoItemsNavBar"

const estadosItemsNavBar: IEstadoItemsNavBar ={
	paginaInicio      :false,
    paginaSobreMi     :false,
    paginaHabilidades :true,
    paginaProyecto    :false,
}

---

<Layout tituloPaguina="Home | Skills">
		
	<NavBar slot="header" estadosItemsNavBar={estadosItemsNavBar} />

	<section slot="body" class="p-2">
		<h2 class="text-2xl text-center text-white mb-2">Habilidades Fuertes</h2>
		<section class=" flex row gap-4 justify-around mb-4">
			<section class="mb-2">
				<h3 class=" text-2xl text-white">General: </h3>
				<div class=" flex flex-col gap-2">
					<span class=" text-white">Git</span>
					<span class=" text-white">GitHub</span>
					<span class=" text-white">Docker</span>
				</div>
			</section>
			<section class="mb-2">
				<h3 class=" text-2xl text-white">Backend: </h3>
				<div class=" flex flex-col gap-2">
					<span class=" text-white">Php</span>
					<span class=" text-white">Laravel 10/11</span>
					<span class=" text-white">Nodejs</span>
					<span class=" text-white">JavaScript</span>
					<span class=" text-white">TypeScript</span>
					<span class=" text-white">MySQL</span>
					<span class=" text-white">PostgresSQL</span>
				</div>
			</section>
			<section class="mb-2">
				<h3 class=" text-2xl text-white">Frontend: </h3>
				<div class=" flex flex-col gap-2">
					<span class=" text-white">Html</span>
					<span class=" text-white">Css</span>
					<span class=" text-white">JavaScript</span>
					<span class=" text-white">TypeScript</span>
					<span class=" text-white">Astro</span>
					<span class=" text-white">React</span>
					<span class=" text-white">Tailwind</span>
				</div>
			</section>
		</section>
		<!-- <h2 class="text-2xl text-center text-white mb-2">Habilidades Blandas</h2> -->

	</section>

</Layout>

